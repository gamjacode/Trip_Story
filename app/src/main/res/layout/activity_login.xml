<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52b669"
    >
    <ImageView
        android:id="@+id/sign_image"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.055"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintStart_toStartOf="@id/start_guideline4"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        android:src="@drawable/ic_back"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.214"
        app:layout_constraintHeight_percent="0.0418"
        android:text="로그인"
        android:fontFamily="@font/nanumgothic"
        android:textColor="#f5f5f5"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline" />

    <EditText
        android:id="@+id/login_edit1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.829"
        android:textColorHint="#ffffff"

        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintTop_toTopOf="@id/top_guideline2"
        android:hint="ID : 이메일을 입력하세요"

        />


    <TextView
        android:id="@+id/login_text1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.829"
        app:layout_constraintHeight_percent="0.0296"
        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintTop_toBottomOf="@id/login_edit1"

        />

    <EditText
        android:id="@+id/login_edit2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.829"
        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintTop_toTopOf="@id/top_guideline5"
        android:hint="PW : 특수문자 포함 8자이상"
        android:password="true"
        />


    <TextView
        android:id="@+id/login_text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"    
        app:layout_constraintWidth_percent="0.829"
        app:layout_constraintHeight_percent="0.0296"
        app:layout_constraintStart_toStartOf="@id/start_guideline2"
        app:layout_constraintTop_toBottomOf="@id/login_edit2"
        />
    
    <TextView
        android:id="@+id/login_text3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.025"
        android:text="비밀번호 찾기"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nanumgothic"
        android:textColor="#f5f5f5"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/start_guideline5"
        app:layout_constraintTop_toTopOf="@id/top_guideline7"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.84"
        app:layout_constraintHeight_percent="0.0592"
        android:autoSizeTextType="uniform"
        android:textColor="#52b669"
        android:text="확인"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:paddingTop="11sp"
        android:paddingBottom="11sp"
        android:background="@drawable/my_button"
        android:fontFamily="@font/nanumgothic"
        app:layout_constraintStart_toStartOf="@id/start_guideline3"
        app:layout_constraintTop_toTopOf="@id/top_guideline3"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.39" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0856" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0456" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.664" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.059" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.566" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.379" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.448" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.478" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.505" />





</androidx.constraintlayout.widget.ConstraintLayout>